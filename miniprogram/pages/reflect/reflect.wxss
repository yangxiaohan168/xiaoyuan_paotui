.contain {
  width: 100%;
  display: flex;
  box-sizing: border-box;
  padding: 30rpx;
  flex-direction: column;
}

.cardyuer {
  width: 100%;
  box-sizing: border-box;
  display: flex;
  padding: 40rpx 40rpx;
  box-shadow: 0 0 20rpx #eee;
  border-radius: 20rpx;
  flex-direction: column;
  justify-content: space-between;
  height: 240rpx;
  background: linear-gradient(to bottom right, #2d8cf0, #2d8cf0);
}
.card{
  width: 100%;
  box-sizing: border-box;
  display: flex;
  padding: 40rpx;
  box-shadow: 0 0 20rpx #eeeeee;
  border-radius: 10rpx;
  flex-direction: column;
}
.title {
  font-size: 28rpx;
  letter-spacing: 4rpx;
  color: #fff;
}

.num {
  font-size: 60rpx;
  color: #fff;
  letter-spacing: 4rpx;
}

.list {
  margin-top: 80rpx;
  width: 100%;
  border-bottom: 1rpx solid #eee;
  padding-bottom: 20rpx;
}

.list view {
  font-size: 28rpx;
  letter-spacing: 2rpx;
  color: #2d8cf0;
}

.list input {
  margin-top: 40rpx;
  width: 100%;
  padding: 0 40rpx;
  font-size: 28rpx;
  height: 40rpx;
  line-height: 40rpx;
}

.confirm {
  margin-top: 80rpx;
  background: #2d8cf0;
  border-radius: 20rpx;
  color: #fff;
  width: 100%;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
  letter-spacing: 24rpx;
  box-shadow: 0 0 20rpx #eee;
}
.tips{
  width: 100%;
  margin-top: 40rpx;
}
.t1{
  font-size: 30rpx;
  line-height: 45rpx;
  letter-spacing: 3rpx;
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}
.t1 image{
  width: 30rpx;
  height: 30rpx;
  padding-right: 20rpx;
}
.t2{
  font-size: 28rpx;
  line-height: 45rpx;
  margin-top: 20rpx;
  letter-spacing: 3rpx;
  color:#b2b2b2;
}

.b2{
  display: flex;
 flex-direction: column;
  justify-content: space-between;
  padding: 20rpx 0rpx;
  height: 150rpx;
  width: 100%;
  border-bottom: 1rpx solid #eeeeee;
}
.d1{
  font-size: 28rpx;
  letter-spacing: 3rpx;
  color: #b2b2b2;
}
.d2{
  width: 100%;
  height: 100%;
  display: flex;
  align-items: flex-end;
  font-size: 30rpx;
}
.d2 view{
  width: 10%;
  font-size: 40rpx;
}
.d2 input{
  width: 90%;
  height: 70rpx;
  line-height: 70rpx;
  font-size:60rpx;
  letter-spacing: 4rpx;
}
.confirm{
  width: 100%;
  height:80rpx;
  background: #5cadff;
  border-radius: 10rpx;
  margin-top: 90rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  letter-spacing: 4rpx;
  color: #ffffff;
}
.blank{
   color: #b2b2b2;
   font-size: 30rpx;
}